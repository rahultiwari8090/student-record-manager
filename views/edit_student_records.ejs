<%- include('./base/header.ejs') %>

<h3>Edit Student Record</h3>

<form action="/edit/<%= student._id %>" method="POST">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" value="<%= student.name %>" class="form-control">
        <% if (validationErrors.name) { %>
            <p class="text-danger"><%= validationErrors.name %></p>
        <% } %>
    </div>

    <div class="mb-3">
        <label class="form-label">Age</label>
        <input type="number" name="age" value="<%= student.age %>" class="form-control">
        <% if (validationErrors.age) { %>
            <p class="text-danger"><%= validationErrors.age %></p>
        <% } %>
    </div>

    <div class="mb-3">
        <label class="form-label">Course</label>
        <input type="text" name="course" value="<%= student.course %>" class="form-control">
        <% if (validationErrors.course) { %>
            <p class="text-danger"><%= validationErrors.course %></p>
        <% } %>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/" class="btn btn-secondary">Cancel</a>
</form>

<%- include('./base/footer.ejs') %>
